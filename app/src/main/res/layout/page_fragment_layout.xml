<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.joelspicer.idleoutpost.PageFragment">


    <ImageButton
        android:id="@+id/dollarBtn"
        android:layout_width="300dp"
        android:layout_height="396dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/tap1"
        android:maxHeight="396dp"
        android:maxWidth="300dp"
        android:minHeight="396dp"
        android:minWidth="300dp"
        android:onClick="dollarBtn"
        android:background="@null"
        />
    <TextView
        android:id="@+id/swipetext"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:maxLines="1"
        android:text="0 dps | 1 dpc"
        android:textColor="#000000"
        android:textSize="15sp"

        />




</RelativeLayout>
