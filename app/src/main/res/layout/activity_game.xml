<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d4d4d4"
    android:padding="5dp"
    tools:context="com.joelspicer.idleoutpost.GameActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_height="500dp"
        android:layout_width="match_parent"
        />

    <TextView
        android:id="@+id/dollarsView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:maxLines="1"
        android:text="0 dollars"
        android:textColor="#000000"
        android:textSize="25sp"

        />

    <TextView
        android:id="@+id/dpsAndDpcView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dollarsView"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:maxLines="1"
        android:text="0 dps | 1 dpc"
        android:textColor="#000000"
        android:textSize="15sp"

        />

    <ImageButton
        android:id="@+id/dollarBtn"
        android:layout_width="300dp"
        android:layout_height="396dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/water"
        android:maxHeight="396dp"
        android:maxWidth="300dp"
        android:minHeight="396dp"
        android:minWidth="300dp"
        android:onClick="dollarBtn" />

    <Button
        android:id="@+id/shopDps"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:maxLines="1"
        android:onClick="shopDps"
        android:text="Dps: +1 | Price: 10"
        android:textColor="#000000"
        android:textSize="20sp" />

    <Button
        android:id="@+id/shopDpc"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/shopDps"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:maxLines="1"
        android:onClick="shopDpc"
        android:text="Dpc: x2 | Price: 1000"
        android:textColor="#000000"
        android:textSize="20sp"

        />

</RelativeLayout>
